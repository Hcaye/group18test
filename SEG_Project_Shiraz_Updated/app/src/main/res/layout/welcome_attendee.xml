<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id ="@+id/main"
    tools:context=".WelcomeMain">


    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="417dp"
        android:layout_height="81dp"
        android:background="#B193E7"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D8C5FD"
            android:fontFamily="serif"
            android:text="Welcome!"
            android:textAlignment="center"
            android:textColor="#4F4545"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </TableRow>

    <TableRow
        android:layout_width="411dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Would you like to attend/organize an event?"
            android:textAlignment="center"
            android:textColor="#4F4545" />
    </TableRow>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <!-- First Row -->

        <!-- Second Row -->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- First Column of First Row -->

            <!-- Second Column of First Row -->

            <TextView
                android:id="@+id/userNameText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="User Name:"
                android:textColor="#4F4545"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userNameDisplay"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="16sp" />


        </TableRow>

        <!-- Third Row -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- First Column of Second Row -->

            <TextView
                android:id="@+id/userRoleText"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="User Role:"
                android:textColor="#4F4545"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userRoleDisplay"
                android:layout_width="0dp"
                android:text="Attendee"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:visibility="visible" />

            <!-- Second Column of Second Row -->

        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>