<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="50dp"
    tools:context=".SelectionActivity">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:scrollbarSize="10dp"
        android:text="Please select your user type"
        android:textSize="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAttendee"
        android:layout_width="221dp"
        android:layout_height="99dp"
        android:text="Sign in as Attendee"
        app:layout_constraintBottom_toTopOf="@+id/buttonOrganizer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <Button
        android:id="@+id/buttonAdministrator"
        android:layout_width="226dp"
        android:layout_height="101dp"
        android:layout_marginBottom="100dp"
        android:text="Sign in as Administrator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonOrganizer" />

    <Button
        android:id="@+id/buttonOrganizer"
        android:layout_width="222dp"
        android:layout_height="104dp"
        android:text="Sign in as Organizer"
        app:layout_constraintBottom_toTopOf="@+id/buttonAdministrator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAttendee" />
</androidx.constraintlayout.widget.ConstraintLayout>